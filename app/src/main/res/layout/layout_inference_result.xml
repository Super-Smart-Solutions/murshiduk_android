<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inference_result_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/disease_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/result_background"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/disease_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disease Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/confidence_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.5%"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <Button
        android:id="@+id/button_show_details"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/show_details"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/disease_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/english_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="English Name" />

        <TextView
            android:id="@+id/arabic_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arabic_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_arabic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Arabic Name" />

        <TextView
            android:id="@+id/result_scientific_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Scientific Name"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/result_symptoms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/symptoms"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Symptoms details here..." />

        <TextView
            android:id="@+id/result_treatment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/treatment"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_treatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment details here..." />
    </LinearLayout>

</LinearLayout>