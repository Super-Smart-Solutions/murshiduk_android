<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/item_r_file"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_top_message"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="@dimen/margin_bottom_message"
        android:orientation="vertical"
        android:background="@drawable/recieve_msg_rounded_corner"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_username_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/pdf"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:layout_height="40dp"></ImageView>


            <TextView
                android:id="@+id/tvRcvFile"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:text="ملف"
                android:layout_gravity="center"
                android:textColor="@color/sent_message_title_color"
                android:layout_width="100dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:src="@drawable/download"
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_height="20dp"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_time_rcv_file"
                style="@style/ReceivedMessageTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="12:20 AM" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>