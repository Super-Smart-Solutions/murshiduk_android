<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ConsultationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".50">

        </FrameLayout>


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_consult_item">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/item_consultation_bg">

                        <LinearLayout
                            android:id="@+id/ll_chat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/click_animate_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/new_chat_ic" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ask_for_advice"
                                    android:textColor="@color/item_consultation_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ask_for_advice_description"
                                    android:textColor="@color/item_consultation_subtext_color"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/img_arrow_width_item_consultation"
                            android:layout_height="@dimen/img_arrow_height_item_consultation"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_new_arrow"
                            app:tint="@color/item_consultation_arrow_color" />

                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_consult_item">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/item_consultation_bg">

                        <LinearLayout
                            android:id="@+id/ll_farm_visit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/click_animate_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/new_chat_ic" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/farm_visit_request"
                                    android:textColor="@color/item_consultation_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/farm_visit_request_details"
                                    android:textColor="@color/item_consultation_subtext_color"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/img_arrow_width_item_consultation"
                            android:layout_height="@dimen/img_arrow_height_item_consultation"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_new_arrow"
                            app:tint="@color/item_consultation_arrow_color" />

                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_consult_item">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/item_consultation_bg">

                        <LinearLayout
                            android:id="@+id/ll_QnA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/click_animate_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/new_qa_ic" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ask_general_question"
                                    android:textColor="@color/item_consultation_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ask_general_question_description"
                                    android:textColor="@color/item_consultation_subtext_color"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/img_arrow_width_item_consultation"
                            android:layout_height="@dimen/img_arrow_height_item_consultation"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_new_arrow"
                            app:tint="@color/item_consultation_arrow_color" />

                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_consult_item">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/item_consultation_bg">

                        <LinearLayout
                            android:id="@+id/ll_Report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/click_animate_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/new_chatbot_ic" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lab_reports"
                                    android:textColor="@color/item_consultation_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lab_reports_description"
                                    android:textColor="@color/item_consultation_subtext_color"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/img_arrow_width_item_consultation"
                            android:layout_height="@dimen/img_arrow_height_item_consultation"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_new_arrow"
                            app:tint="@color/item_consultation_arrow_color" />

                    </FrameLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_consult_item">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/item_consultation_bg">

                        <LinearLayout
                            android:id="@+id/ll_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="63dp"
                            android:layout_marginEnd="63dp"
                            android:layout_gravity="center"
                            android:background="@drawable/click_animate_bg"
                            android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="@string/other"
                                    android:textColor="@color/item_consultation_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/item_consultation_subtext_color"
                                    android:textSize="11sp"
                                    android:visibility="gone"/>

                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/fl_circle_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/circle"
                            android:rotation="270"
                            android:backgroundTint="@color/white"
                            >

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_new_arrow"
                                app:tint="@color/item_consultation_arrow_color" />

                        </FrameLayout>

                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_other_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_consult_item">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/item_consultation_bg">

                            <LinearLayout
                                android:id="@+id/ll_ChatBot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/click_animate_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/new_chatbot_ic" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/chat_bot"
                                        android:textColor="@color/item_consultation_text_color"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/chat_bot_description"
                                        android:textColor="@color/item_consultation_subtext_color"
                                        android:textSize="11sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/img_arrow_width_item_consultation"
                                android:layout_height="@dimen/img_arrow_height_item_consultation"
                                android:layout_gravity="end|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_new_arrow"
                                app:tint="@color/item_consultation_arrow_color" />

                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_consult_item">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/item_consultation_bg">

                            <LinearLayout
                                android:id="@+id/ll_Coffee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/click_animate_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/new_chatbot_ic" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/coffee_disease"
                                        android:textColor="@color/item_consultation_text_color"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/coffee_disease_description"
                                        android:textColor="@color/item_consultation_subtext_color"
                                        android:textSize="11sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/img_arrow_width_item_consultation"
                                android:layout_height="@dimen/img_arrow_height_item_consultation"
                                android:layout_gravity="end|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_new_arrow"
                                app:tint="@color/item_consultation_arrow_color" />

                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_consult_item">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/item_consultation_bg">

                            <LinearLayout
                                android:id="@+id/ll_library"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:background="@drawable/click_animate_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/new_chatbot_ic" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/ll_item_consultation_text_margen"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/digital_library"
                                        android:textColor="@color/item_consultation_text_color"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/digital_library_description"
                                        android:textColor="@color/item_consultation_subtext_color"
                                        android:textSize="11sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/img_arrow_width_item_consultation"
                                android:layout_height="@dimen/img_arrow_height_item_consultation"
                                android:layout_gravity="end|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_new_arrow"
                                app:tint="@color/item_consultation_arrow_color" />

                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_request_farm_visit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/farm_visit_big_bg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnChat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/consultation_back" />

            <ImageView
                android:id="@+id/btnChatBot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/bot_back" />


            <ImageView
                android:id="@+id/btnQnA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/qa_back" />


            <ImageView
                android:id="@+id/btnReport"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/lab_back" />

            <ImageView
                android:id="@+id/btnCoffee"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/market_back" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>