<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

<androidx.core.widget.NestedScrollView
    android:layout_marginBottom="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <LinearLayout
            android:layout_margin="-20dp"
            android:background="@drawable/new_design_back"
            android:layout_width="match_parent"
            android:layout_height="200dp"></LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_corner_calender"
            >

            <Button
                android:id="@+id/btnDone"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="90dp"
                android:layout_gravity="end"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/round_grey_border"
                android:text="@string/save"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_photo"
                    android:layout_height="100dp">

                </ImageView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/gray"

                    />


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/sa_flag"
                        android:layout_width="30dp"
                        android:layout_height="25dp"></ImageView>

                <TextView
                    android:id="@+id/tvCountryName"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المملكة العربية السعودية"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textColor="@color/black"

                    />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#c22419"

                    />

            </LinearLayout>




        </androidx.cardview.widget.CardView>



    </FrameLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/btnPencil"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/round_edit_profile"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginEnd="80dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/pencil"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="حدد الملف الشخصي"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"></TextView>


    </FrameLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutWork"
        android:layout_marginStart="20dp"
        android:layout_height="60dp">

        <ImageView
            android:src="@drawable/icon_worktimings"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="العمل"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <Switch
            android:id="@+id/switchOnline"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            />


    </LinearLayout>

    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutSkill"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_skills"
            android:layout_width="40dp"
            android:layout_height="40dp"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView

                android:id="@+id/tvSkills"
                android:layout_marginStart="4dp"
                android:text="bfbff  ffffb fbbfbbfbb ffhfhfh hfhffhhfhfhhfh hfhfhfhhhhfhhfhhfhhf fhfhffhfh jffjffjjfjjfjjfj"
                android:layout_width="match_parent"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_height="40dp"></ImageView>

        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/spacerProfile"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layoutProfileInfo"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_profile"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="الملف الشخصي"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/grey"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                ></TextView>


        </LinearLayout>




    </LinearLayout>

    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutRegion"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_region"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="المنطقة"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView

                android:id="@+id/tvRegion"
                android:layout_marginStart="10dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_height="40dp"></ImageView>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutCountry"
        android:visibility="gone"
        android:layout_height="70dp">

        <ImageView
            android:src="@drawable/icon_country"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:layout_height="match_parent"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/country"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView

                android:id="@+id/tvCountry"
                android:layout_marginStart="4dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_height="40dp"></ImageView>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutCity"
        android:visibility="gone"
        android:layout_height="70dp">

        <ImageView
            android:src="@drawable/icon_country"
            android:layout_width="0dp"
            android:layout_weight="0.22"
            android:padding="10dp"
            android:layout_height="match_parent"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/city"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView

                android:id="@+id/tvCity"
                android:layout_marginStart="4dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_height="40dp"></ImageView>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tvRatingHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="تقيم"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:textStyle="bold"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ratings"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/spacerRating"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutAlert"
        android:layout_marginStart="20dp"
        android:layout_height="60dp">

        <ImageView
            android:src="@drawable/alert_profile_icon"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="تنبيهاتي"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_height="40dp"></ImageView>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layoutLogout"
        android:layout_marginStart="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icon_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="تسجيل خروج"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_height="40dp"></ImageView>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>

    <include layout="@layout/bottom_bar"></include>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        android:visibility="gone"
        android:padding="5dp"
        style="@style/SpinKitView.Large.FadingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_simple"
        android:backgroundTint="@color/light_gray"
        app:SpinKit_Color="@color/colorAccent" />

</FrameLayout>