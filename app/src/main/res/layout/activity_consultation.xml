<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

<ScrollView
    android:layout_marginTop="10dp"
    android:layout_marginBottom="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

           <ImageView
               android:layout_marginEnd="20dp"
               android:layout_marginStart="20dp"
               android:layout_marginTop="10dp"
               android:padding="2dp"
               android:src="@drawable/bot_back"
               android:layout_width="match_parent"
               android:layout_height="120dp">
           </ImageView>


            <ImageView
                android:id="@+id/btnChat"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@drawable/consultation_back"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            </ImageView>

            <ImageView
                android:id="@+id/btnQnA"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@drawable/qa_back"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            </ImageView>

            <ImageView
                android:id="@+id/btn_request_farm_visit"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@drawable/qa_back"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            </ImageView>

            <ImageView
                android:id="@+id/btnReport"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@drawable/lab_back"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            </ImageView>

            <ImageView
                android:id="@+id/btnMarket"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@drawable/market_back"
                android:layout_width="match_parent"
                android:layout_height="120dp">
            </ImageView>



        </LinearLayout>

</ScrollView>

    <include layout="@layout/bottom_bar"></include>


</androidx.coordinatorlayout.widget.CoordinatorLayout>