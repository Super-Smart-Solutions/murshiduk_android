<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_news"
    android:layout_width="129dp"
    android:layout_height="129dp"
    android:layout_margin="7dp"
    app:cardBackgroundColor="#51519d"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp">

    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.09"
        android:contentDescription="@string/image"
        android:scaleType="center"
        android:src="@drawable/mashroom" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:src="@drawable/news_curved_transparent_img" />

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="normal"
        tools:text="ورشة عمل ورشة عمل ورشة عمل" />

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_gravity="end|top"
        android:layout_margin="9dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/ll_news_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-2dp"
                android:layout_weight=".36"
                android:fontFamily="@font/cairoregular"
                android:gravity="center"
                android:lineSpacingExtra="0dp"
                android:textColor="@color/black"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:text="JAN" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight=".32"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="-3.5dp"
                    android:fontFamily="@font/cairoregular"
                    android:gravity="center"
                    android:lineHeight="13dp"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:text="08" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_year"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-1dp"
                android:layout_weight=".32"
                android:fontFamily="@font/cairoregular"
                android:gravity="center"
                android:lineSpacingExtra="0dp"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:text="2024" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>