<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/item_s_file"
    >


    <FrameLayout
        android:layout_gravity="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="@dimen/margin_top_message"
        android:layout_marginBottom="@dimen/margin_bottom_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send_message_rounded_corner"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/pdf"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_margin="5dp"
                    android:layout_height="40dp"></ImageView>


                <TextView
                    android:id="@+id/tvSendFile"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:text="ملف"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:src="@drawable/download"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:tint="@color/white"
                    android:layout_height="20dp"></ImageView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="right"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_time_send_file"
                    style="@style/SentMessageTimeTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:paddingLeft="4dp"
                    android:text="12:20 AM" />

                <ImageView
                    android:id="@+id/msg_tick_file"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_check" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>