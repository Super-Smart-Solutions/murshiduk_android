<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typing_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/round_border_chat_text"
    android:backgroundTint="@color/light_sky300"
    android:gravity="center"
    android:orientation="horizontal"
    tools:showIn="@layout/content_chat">


    <ImageView
        android:id="@+id/ivSend"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical|bottom"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_send"
        app:tint="@color/colorDarkGray" />

    <ImageView
        android:id="@+id/img_attachment"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical|bottom"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="0dp"
        app:srcCompat="@drawable/ic_attach_file"
        app:tint="#525f5e" />


    <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="6dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/write_your_message"
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="45dp"
        android:maxHeight="120dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/et_message_text_size"
        app:emojiconSize="28sp" />


    <ImageView
        android:id="@+id/emoji_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical|bottom"
        android:src="@drawable/smiley"
        app:tint="#525f5e" />


</LinearLayout>