<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/app_bar_transparent" />

    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="@string/contact_us"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/btnWhatsapp"
            android:background="@drawable/rounded_corner_calender"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/whatsapp"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/whatsApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="0596472727"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/tvDesc"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/choose_fiber_box"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="4dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/arrow"
                    android:layout_width="40dp"
                    android:padding="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@id/btnCall"
            android:backgroundTint="#F7F1C3"
            android:background="@drawable/rounded_corner_calender"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/call_yellow_icon"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="0596472727"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/arrow"
                    android:layout_width="40dp"
                    android:padding="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp" />

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:background="@color/gray"
            android:layout_height="1dp" />

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text="@string/contact_us_details"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/btnFB"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/facebook"
                android:layout_width="80dp"
                android:padding="2dp"
                android:layout_height="match_parent" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="Facebook"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/btnTwitter"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/twitter"
                android:layout_width="80dp"
                android:padding="2dp"
                android:layout_height="match_parent" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="Twitter"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/btnYoutube"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/youtube"
                android:layout_width="80dp"
                android:padding="2dp"
                android:layout_height="match_parent" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="Youtube"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/btnInstagram"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/instagram"
                android:layout_width="80dp"
                android:padding="2dp"
                android:layout_height="match_parent" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="Instagram"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/btnSnapchat"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/snapchat"
                android:layout_width="80dp"
                android:padding="2dp"
                android:layout_height="match_parent" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="Snapchat"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
    </ScrollView>


</FrameLayout>
