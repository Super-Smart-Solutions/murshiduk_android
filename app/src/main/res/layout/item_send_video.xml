<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_message"
    android:layout_marginTop="@dimen/margin_top_message"
    android:id="@+id/item_s_video"
    android:visibility="visible"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/colorBlack"
        android:background="@drawable/round_corner_search"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >



        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:layout_margin="10dp"
                android:background="@color/black"
                android:id="@+id/videoSendImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">


                <ImageButton
                    android:id="@+id/btn_play_video_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_play_bg"
                    android:padding="14dp"
                    app:srcCompat="@drawable/ic_play_arrow" />


                <ProgressBar
                    android:id="@+id/progress_bar_video"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_media_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_videocam_wrapped"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time_send_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text=""
                        android:textColor="#efebe9"
                        android:textSize="11sp" />

                    <ImageView

                        android:id="@+id/msg_tick_video"
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/ic_check" />
                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>