<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/header_business" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp">


        <Button
            android:id="@+id/btnDone"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/round_grey_border"
            android:text="@string/save"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="27dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/profile"
            android:src="@drawable/profile_photo" />


        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/profile_info_space_height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_light_2"
                    android:textSize="@dimen/text_size_subtitle"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/outline_call_24"
                    app:drawableTint="@color/gray_light_2"
                    tools:text="966 55 555 5555" />

                <TextView
                    android:id="@+id/tvCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="3dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_light_2"
                    android:textSize="@dimen/text_size_subtitle"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/map_pin_15"
                    app:drawableTint="@color/gray_light_2"
                    tools:text=" السعودية" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/btnPencil"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="27dp"
            android:contentDescription="@string/edit"
            android:src="@drawable/outline_edit_square_24" />

        <TextView
            android:id="@+id/tvUserType"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="11dp"
            android:background="@drawable/round_grey_border_8dp"
            android:backgroundTint="#4c63be6a"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_subtitle"
            tools:text="مرشد" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="@string/profile"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/round_grey_border_16dp"
        android:backgroundTint="@color/white"
        android:elevation="1dp"
        android:padding="5dp"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layoutWork"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/case_round_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:text="@string/work"
                            android:textAppearance="@style/ProfileListTextAppearance" />


                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:padding="6dp"

                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layoutSkill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:contentDescription="@string/skills"
                        android:src="@drawable/list_clipboard_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="4dp"
                            android:text="@string/status"
                            android:textAppearance="@style/ProfileListTextAppearance" />

                        <TextView
                            android:id="@+id/tvSkills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:textAppearance="@style/ProfileListTextAppearance"
                            android:textSize="@dimen/text_size_body" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:src="@drawable/arrow"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layout_my_clips"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/video_camera_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:text="@string/my_clips"
                            android:textAppearance="@style/ProfileListTextAppearance" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layout_send_guide_notify"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/bell_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:text="@string/send_guide_notification"
                            android:textAppearance="@style/ProfileListTextAppearance" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layoutProfileInfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/baseline_person_outline_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="4dp"
                            android:text="الملف الشخصي"
                            android:textAppearance="@style/ProfileListTextAppearance" />


                        <TextView
                            android:id="@+id/tvProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="4dp"
                            android:textAppearance="@style/ProfileListTextAppearance"
                            android:textSize="@dimen/text_size_body" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />


                <LinearLayout
                    android:id="@+id/layoutRegion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/outline_location_on_15"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="4dp"
                            android:text="المنطقة"
                            android:textAppearance="@style/ProfileListTextAppearance" />

                        <TextView
                            android:id="@+id/tvRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="5dp"
                            android:textAppearance="@style/ProfileListTextAppearance"
                            android:textSize="@dimen/text_size_body" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:src="@drawable/arrow"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layoutCountry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:padding="10dp"
                        android:src="@drawable/icon_country" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/country"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/tvCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:src="@drawable/arrow"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutCity"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:padding="10dp"
                        android:src="@drawable/icon_country" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/city"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/tvCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:src="@drawable/arrow"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tvRatingHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/ratings"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ratings"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layoutAlert"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/bell_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:text="تنبيهاتي"
                            android:textAppearance="@style/ProfileListTextAppearance" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layoutContact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/phone_alt_24"
                        app:tint="@color/profile_list_icon_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:text="@string/contact_us"
                            android:textAppearance="@style/ProfileListTextAppearance" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:src="@drawable/arrow"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:background="@drawable/divider"
                    android:backgroundTint="#f8f8fa" />

                <LinearLayout
                    android:id="@+id/layoutAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/ic_about_us" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="4dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/about_us"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:src="@drawable/arrow"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_items_space"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutBug"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_profile_items"
                    android:background="@drawable/round_border_profile_items_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_start_profile_icons"
                        android:src="@drawable/bug_24"
