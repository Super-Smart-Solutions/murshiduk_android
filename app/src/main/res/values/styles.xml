<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/opensans_reg</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="GreenButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background_default</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textAllCaps">false</item> <!-- Prevents automatic capitalization -->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="GreenButtonStyle.dark" parent="GreenButtonStyle">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="WhiteButtonStyle" parent="GreenButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/themeColor</item> <!-- White text color -->
        <item name="android:drawableTint">@color/themeColor</item>
    </style>

    <style name="WhiteButtonStyle.dark" parent="WhiteButtonStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item> <!-- White text color -->
        <item name="android:drawableTint">@color/colorPrimaryDark</item>    </style>


    <style name="CustomDatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorPrimaryDark</item>
        <item name="android:dayOfWeekBackground">@android:color/darker_gray</item>
        <item name="android:dayOfWeekTextAppearance">@style/CustomDayOfWeekTextAppearance</item>
        <item name="android:selectedWeekBackgroundColor">@color/colorPrimary</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="CustomDayOfWeekTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottom_navigation_style" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="elevation">0dp</item>
        <item name="height">56dp</item>
        <item name="android:fontFamily">@font/opensans_reg</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>

    <style name="TextStyleTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleTitle2" parent="TextStyleTitle">
        <item name="android:textSize">@dimen/text_size_title_2</item>
    </style>

    <style name="TextStyleSubtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleSubtitle2" parent="TextStyleSubtitle">
        <item name="android:textSize">@dimen/text_size_subtitle_2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyleBody" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProfileListTextAppearance" parent="TextStyleSubtitle">
        <item name="android:textColor">@color/gray_light_4</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/arfonts_sst_arabic_family</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/arfonts_sst_arabic_family</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="android:statusBarColor">@color/background_app_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="tabBackground">@color/background_app_color</item>

        <!--        change app background color -->
        <item name="android:windowBackground">@color/background_app_color</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="AppTheme.Reef" parent="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/reef_medium_loew</item>
    </style>


    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/themeColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleEnabled">false</item>
        <item name="showTitle">false</item>
    </style>

    <style name="Theme.Trans" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="TabTextBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SentMessageTimeTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/sent_message_time_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ReceivedMessageTimeTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/received_message_time_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>


    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WeightWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="SplashLogoStyle" parent="WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="SplashAppVersionStyle" parent="WrapContent">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/splash_version_text_size</item>
    </style>

    <style name="SplashAppTitleStyle" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/splash_main_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_common</item>
    </style>

    <style name="FabStyle" parent="WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="ListItem" parent="MatchWidth">
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserTitleStyle" parent="WeightWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="UserCheckboxStyle" parent="WrapContent">
        <item name="android:layout_marginRight">@dimen/list_item_side_margin</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ListViewWithoutDividerStyle" parent="MatchParent">
        <item name="android:divider">@null</item>
    </style>

    <style name="ListItemIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/list_item_side_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="UserIconStyle" parent="ListItemIconStyle">
        <item name="android:layout_marginLeft">@dimen/list_item_side_margin</item>
        <item name="android:padding">@dimen/padding_common</item>
    </style>

    <style name="DialogNameStyle" parent="MatchWidth">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CallerAvatar">
        <item name="android:layout_width">@dimen/call_avatar_diameter</item>
        <item name="android:layout_height">@dimen/call_avatar_diameter</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/logo</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RoundedImageButton">
        <item name="android:layout_width">@dimen/call_buttons_diameter</item>
        <item name="android:layout_height">@dimen/call_buttons_diameter</item>
        <item name="android:padding">@dimen/call_buttons_padding</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EndCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_end</item>
        <item name="android:src">@drawable/ic_phone_hangup</item>
    </style>

    <style name="TakeCallImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/selector_call_take</item>
    </style>

    <style name="ToolbarStyleCall" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="SeekBarPreferenceTitle" parent="WrapContent">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowActionBar">false</item>-->
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#d0d0d0</item>

        <item name="android:windowBackground">@color/background_app_color</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#007940</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">11sp</item>
        <item name="text_size">11sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/gray</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/gray_light</item>
    </style>

    <style name="ThemeFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AlertTextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="selectedText">
        <item name="android:textColor">@color/text_color_active</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="unselectedText">
        <item name="android:textColor">@color/text_color_inactive</item>
        <item name="android:textFontWeight">400</item>
    </style>


</resources>

