<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="wrap_content">


    <TextView
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_consultant"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
       />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_was_it"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <RatingBar
        android:layout_marginTop="15dp"
        android:id="@+id/rating"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow"
        style="?android:attr/ratingBarStyle"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        />

    <EditText

        android:id="@+id/etComment"
        android:inputType="textMultiLine"
        android:lines="8"
        android:visibility="visible"
        android:minLines="6"
        android:hint="اكتب تعليق"
        android:layout_gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:maxLines="15"
        android:maxLength="500"
        android:layout_marginTop="16dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:background="@drawable/round_corner_search"
        android:backgroundTint="@color/white"
        />


    <Button
        android:id="@+id/btnDone"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/round_corner_simple"
        android:text="@string/done"
        />

<View
    android:layout_width="match_parent"
    android:layout_height="30dp"></View>

</LinearLayout>