<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:layout_width="15dp"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view_status_indicator"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/status_indicator" />
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="top|center"
            android:background="@drawable/circle_reef_list_bg"/>
    </FrameLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReefSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Your wish list has been submitted\n\n\"
            android:lineSpacingExtra="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>